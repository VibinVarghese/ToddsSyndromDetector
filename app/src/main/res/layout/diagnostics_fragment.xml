<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Probability that you have Toddâ€™s Syndrome"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/probability_text"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular" />

    </FrameLayout>

    <TextView
        android:id="@+id/previous_results_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="View Previous Results"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_above="@id/previous_results_text"
        android:id="@+id/retake_questionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Retake Questionaire"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>